@model Warehouse.Application.ViewModels.Structure.StructureDetailsVM

@{
    ViewData["Title"] = "EditStructure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditStructure</h1>

<h4>StructureDetailsVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStructure">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="StructureId" class="form-control" />
            </div>
            
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
