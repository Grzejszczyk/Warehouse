@model Warehouse.Application.ViewModels.Structure.StructureDetailsVM

@{
    ViewData["Title"] = "EditStructure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Edycja struktury</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStructure">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="StructureId" class="form-control" />
            </div>

            <div class="form-group">
                <label @*asp-for="StructureName"*@ class="control-label">Nazwa struktury:</label>
                <input asp-for="StructureName" class="form-control" />
                <span asp-validation-for="StructureName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label @*asp-for="ProductName"*@ class="control-label">Nazwa produktu:</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label @*asp-for="Project"*@ class="control-label">Projekt:</label>
                <input asp-for="Project" class="form-control" />
                <span asp-validation-for="Project" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="StructuresList">Wróć do listy struktur</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
