@model Warehouse.Application.ViewModels.Item.ItemsListForListVM

@{
    ViewData["Title"] = "Index";
}

<h1>Item List</h1>
@if (User.HasClaim(c=>c.Value == "EditItems"))
{
    <p>
        <a asp-action="EditItem">Create New</a>
    </p>
}

<form asp-action="ItemsList" asp-controller="Item" method="post">
    <div class="container">
        <div class="row align-items-center p-3">
            <input class="col-4 m-1 form-control" type="text" asp-for="SearchString" name="searchString" />
            <input class="col-2 m-1 btn btn-primary" type="submit" value="Search" />
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Quantity
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditItem", new { id = item.Id }) |
                        @Html.ActionLink("Details", "ItemDetails", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "SetIsDeletedItem", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <div page-model="@Model.PaggingInfo" page-action="ItemsList"></div>
    </div>
</form>