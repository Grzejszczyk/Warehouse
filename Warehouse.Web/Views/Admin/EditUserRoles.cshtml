@model Warehouse.Application.ViewModels.Admin.RolesListToAssignToUserVM

@{
    ViewData["Title"] = "EditUserRoles";
}

<h1>Edit User Roles</h1>
<h4>User Id: @Model.UserId</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUserRoles">
            <input asp-for="UserId" value="@Model.UserId" type="hidden" />

            @for (int i = 0; i < Model.RoleIsAssignedList.Count; i++)
            {
                <div class="form-check">
                    <input asp-for="RoleIsAssignedList[i].IsAssignedToRole" class="form-check-input" />
                    <input asp-for="RoleIsAssignedList[i].RoleId" type="hidden" />
                    <input asp-for="RoleIsAssignedList[i].RoleName" type="hidden" />
                    <label class="form-check-label">@Model.RoleIsAssignedList[i].RoleName</label>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

